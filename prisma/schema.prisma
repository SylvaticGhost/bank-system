generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["user_schema", "admin_schema", "account_schema"]
}

model User {
  id           String   @id
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  email        String   @unique
  birthdate    DateTime @map("birth_date")
  passwordHash String   @map("password_hash")
  passwordSalt String   @map("password_salt")
  blocked      Boolean

  @@map("users")
  @@schema("user_schema")
}

model Account {
  id        String   @id
  ownerId   String   @map("owner_id")
  createdAt DateTime @map("created_at")
  currency  String
  type      String
  tag       String
  isClosed  Boolean  @map("is_closed")

  @@map("accounts")
  @@schema("account_schema")
}

model DepositInfo {
  accountId String @id @map("account_id")
  rate      Float

  @@map("deposit_info")
  @@schema("account_schema")
}

model Operation {
  transactionId String   @map("transaction_id")
  accountId     String   @map("account_id")
  partnerId     String   @map("partner_id")
  amount        Float
  currency      String
  time          DateTime @map("time")
  type          String
  comment       String

  @@id([transactionId, accountId])
  @@map("operations")
  @@schema("account_schema")
}

model BlockedUser {
  actionId    String   @id @map("action_id")
  userId      String   @map("user_id")
  time        DateTime
  comment     String
  committedBy String   @map("committed_by")
  action      String

  @@map("blocked_users")
  @@schema("admin_schema")
}

model BlockedAccount {
  actionId       String   @map("action_id")
  accountId      String   @map("account_id")
  accountOwnerId String   @map("account_owner_id")
  time           DateTime
  comment        String
  committedBy    String   @map("committed_by")
  action         String

  @@id([actionId, accountId])
  @@map("blocked_accounts")
  @@schema("admin_schema")
}
